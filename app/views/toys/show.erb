<h2><%= "#{@toy.name}" %></h2>
<ul>
  <li><%= "Toy type: #{@toy.variety}" %></li>
  <li><%= "Belongs to: #{@toy.user.name}" %></li>
</ul>

<% if @toy.user_id == current_user.id %>
  <form method="get" action="/toys/<%= @toy.id %>/edit">
    <button type="submit" value="Edit Toy">Edit Toy</button>
  </form>


  <form method="post" action="/toys/<%=@toy.id%>/delete">
    <input id="hidden" type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Toy">
  </form>

<% end %>
