<h1><%= "Toy Collection: #{@owner.name}" %></h1>
<% if !@owner.toys.empty? %>
  <% @owner.toys.each do |toy| %>
    <a href="/toys/<%= toy.id %>"><h3><%= "#{toy.name} - #{toy.variety}" %></h3></a>
  <% end %>
<% end %>
<% if current_user.id == @owner.id %>
  <h3><a href="/toys/new">Add new toys.</a></h3>
<% end %>
